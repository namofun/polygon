@model IReadOnlyCollection<(string Key, string Value)>
@{
    Layout = "_WindowLayout";
    ViewData["Title"] = "Import Problem";
    ViewData["StaticBackdrop"] = true;
    ViewData["FormAjaxUpload"] = Url.Action("Import");
}

<div class="form-group">
    <label for="mytype">Type</label>
    <select id="mytype" name="type" class="form-control" asp-items="Model.Select(k => new SelectListItem(k.Value, k.Key))"></select>
</div>
<div class="form-group">
    <label for="customFile">File</label>
    <div class="custom-file">
        <input name="file" type="file" class="custom-file-input" id="customFile">
        <label class="custom-file-label" for="customFile">Choose file</label>
    </div>
</div>
<p>After import, a new problem will be created.</p>
<div class="upload-progress" asp-viewdata-key="InAjax"><div></div></div>

@section Footer {
    <button type="submit" class="btn btn-primary">Begin</button>
} 
