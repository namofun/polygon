@model TestcaseUploadModel
@{
    Layout = "_WindowLayout";
    ViewData["StaticBackdrop"] = true;
    ViewData["FormAjaxUpload"] = Url.Action();
}

<div class="form-group">
    <label asp-for="ProblemId"></label>
    <input asp-for="ProblemId" class="form-control" readonly />
</div>
<div class="form-group">
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="InputContent"></label>
    <div class="custom-file">
        <input asp-for="InputContent" class="custom-file-input" id="inputFile">
        <label class="custom-file-label" for="customFile">Choose file</label>
    </div>
</div>
<div class="form-group">
    <label asp-for="OutputContent"></label>
    <div class="custom-file">
        <input asp-for="OutputContent" class="custom-file-input" id="outputFile">
        <label class="custom-file-label" for="customFile">Choose file</label>
    </div>
</div>
<div class="form-group">
    <label asp-for="Point"></label>
    <input asp-for="Point" class="form-control" />
</div>
<div class="form-group">
    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" asp-for="IsSecret" />
        <label class="custom-control-label" asp-for="IsSecret"></label>
    </div>
</div>
<div class="testcase-custom-sample @(Model.IsSecret ? "d-none" : "")">
    <div class="form-group">
        <label asp-for="CustomInput"></label>
        <textarea asp-for="CustomInput" class="form-control" placeholder="Leave empty if use input content"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CustomOutput"></label>
        <textarea asp-for="CustomOutput" class="form-control" placeholder="Leave empty if use output content"></textarea>
    </div>
</div>
<div class="upload-progress" asp-viewdata-key="InAjax"><div></div></div>

@section Footer {
    <button type="submit" class="btn btn-primary">Begin</button>
}

@section Scripts {
    <script>
        $(function () {
            $('#IsSecret').on('change', function () {
                if ($(this).is(':checked')) {
                    $('.testcase-custom-sample').addClass('d-none');
                } else {
                    $('.testcase-custom-sample').removeClass('d-none');
                }
            });
        });
    </script>
}
