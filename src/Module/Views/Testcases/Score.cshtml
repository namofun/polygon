@model TestcaseScoreModel
@{
    ViewData["Title"] = "Update score";
    Layout = "_WindowLayout";
}

<input type="hidden" asp-for="ProblemId" />
<div class="form-group">
    <label>Testcase rank</label>
    <div class="input-group">
        <input asp-for="Lower" class="form-control" />
        <div class="input-group-append input-group-prepend">
            <span class="input-group-text">~</span>
        </div>
        <input asp-for="Upper" class="form-control" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Score"></label>
    <input asp-for="Score" class="form-control" />
</div>

@section Footer {
    <button asp-route-pid="@Model.ProblemId" asp-action="Score" type="submit" class="btn btn-primary">Save</button>
}
